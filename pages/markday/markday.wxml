<view class='markday'>
  <view class='list' bindtap='toDetail' wx:for="{{list}}">
    <view class='content'>
      <view class='iconfont icon-aixin'></view>
      <view class='list-text'>
        <view class='list-text-title'>距离我们{{item.content}}已经</view>
        <view class='list-text-time'>{{item.markDate}}</view>
      </view>
      <view class='num'>{{item.day}}</view>
      <view class='day'>天</view>
    </view>
  </view>
  <view class='list' bindtap='toAdd'>
    <view class='content'>
      <view class='iconfont icon-aixin'></view>
      <view class='title'>添加纪念日</view>
      <view class='iconfont icon-jia'></view>
    </view>
  </view>
</view>